---
import { navOptionList } from '../../common/constants.ts';
import CartButton from '../buttons/CartButton.astro';
import LinkButton from '../buttons/LinkButton.astro';
import LogoButton from '../buttons/LogoButton.astro';
import MenuButton from '../buttons/MenuButton.astro';
import NotificationButton from '../buttons/NotificationButton.astro';
import { Separator } from '../ui/separator';

/*
 * TOP BAR LAYOUT
 * desktop(logo) - mobile(DRAWER MENU) | desktop(NAVIGATION) - mobile(logo) | desktop(CART/NOTIFICATIONS/AUTHENTICATION)
 * */

const isAuthenticated = true;
---

<header class="flex w-full flex-col">
  <div class="flex items-center justify-between gap-4 p-2 lg:px-4">
    <MenuButton
      id="drawer-button"
      className="order-1 hover:cursor-pointer lg:hidden size-8"
    />

    <nav class="hidden lg:order-2 lg:flex lg:flex-1">
      <ul class="flex grow items-center justify-start gap-6">
        {
          navOptionList.map(({ href, name }) => (
            <li>
              <a href={href} class="hover:underline">
                <p class="text-base font-bold">{name}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <LogoButton linkClass='hidden lg:order-1 lg:block' className="size-12 hover:scale-105 " />

    <div class="order-3 flex items-center justify-center gap-x-4">
      <div class="flex items-center justify-center gap-x-2">
        <!-- TODO: AUTH-PROFILE COMPONENT -->
        {
          isAuthenticated ? (

          <CartButton  />
          <NotificationButton  />
            <div class="hidden lg:block">Profile button</div>
          ) : (
              <LinkButton
                id="sign-in-button"
                href="/auth/signin"
              >
                <p>Sign In</p>
              </LinkButton>
              <LinkButton
                id="sign-up-button"
                href="/auth/signup"
              >
                <p>Sign Up</p>
              </LinkButton>
          )
        }
      </div>
    </div>
  </div>
  <Separator />
</header>
