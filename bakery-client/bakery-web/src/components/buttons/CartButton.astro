---
import CartSVG from '@/assets/shopping_cart.svg';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<a
  href="/cart"
  class:list={[
    className,
    'hover:bg-accent inline-flex items-center justify-center rounded-md p-1',
  ]}
>
  <CartSVG class="size-fit" />
</a>
