---
import LinkButton from './LinkButton.astro';
import CartSVG from '@/assets/shopping_cart.svg';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<LinkButton
  id={`top-cart-button`}
  href="/cart"
  variant="secondary"
  size="icon"
  className={className}
>
  <CartSVG class="size-6" />
</LinkButton>
