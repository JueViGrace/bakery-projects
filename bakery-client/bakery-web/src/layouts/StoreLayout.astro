---
import TopBar from '@components/bars/TopBar.astro';
import Footer from '@components/Footer.astro';
import DrawerMenu from '@components/menu/DrawerMenu.astro';
import Layout from '@layouts/Layout.astro';

interface Props {
  title?: string;
}

const { title = 'Bakery and Deserts' } = Astro.props;

export const prerender = true;
---

<Layout title={title}>
  <DrawerMenu transition:name="drawer-menu" transition:persist />
  <section class="flex min-h-screen w-full flex-col">
    <TopBar transition:name="top-bar" transition:persist />
    <section class="flex flex-1 items-center justify-center">
      <slot />
    </section>
    <Footer transition:name="footer" transition:persist />
  </section>
</Layout>
