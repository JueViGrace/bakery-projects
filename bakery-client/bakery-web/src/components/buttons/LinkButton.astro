---
import { Button } from '../ui/button';

interface Props {
  id: string;
  href?: string;
  target?: string;
  className?: string;
  variant?:
    | 'default'
    | 'link'
    | 'destructive'
    | 'outline'
    | 'secondary'
    | 'ghost'
    | null
    | undefined;
  size?: 'default' | 'sm' | 'lg' | 'icon' | null | undefined;
}

const {
  id,
  variant = 'default',
  size = 'default',
  href = '#',
  target = '_self',
  className,
} = Astro.props;
---

<Button
  id={id}
  variant={variant}
  size={size}
  className={`${className} hover:cursor-pointer`}
>
  <slot />
</Button>
<script is:inline define:vars={{ id, href, target }}>
  import { onButtonClick } from '@/scripts/button-click';
  onButtonClick(id, href, target);
</script>
