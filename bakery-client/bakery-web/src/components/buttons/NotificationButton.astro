---
import BellSVG from '../../assets/bell.svg';
import LinkButton from './LinkButton.astro';

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<LinkButton
  id="notification-button"
  href="/notifications"
  className={className}
  size="icon"
  variant="secondary"
>
  <BellSVG class="size-6" />
</LinkButton>
